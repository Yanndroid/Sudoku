<?xml version="1.0" encoding="utf-8"?>
<de.dlyt.yanndroid.samsung.layout.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:drawer_icon="@drawable/ic_samsung_info"
    app:drawer_viewId="@id/viewInDrawer"
    app:toolbar_title="@string/app_name"
    app:toolbar_subtitle="Time: 0"
    tools:context=".MainActivity">

    <include
        android:id="@+id/viewInDrawer"
        layout="@layout/content_drawer" />

    <GridView
        android:id="@+id/sudokuView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/item_background_color"
        android:foreground="@drawable/rounded_corner"
        android:foregroundTint="@color/background_color"
        android:nestedScrollingEnabled="true"
        android:numColumns="9"
        android:paddingHorizontal="15dp"
        android:paddingVertical="15dp"
        android:scrollbars="none" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.core.widget.NestedScrollView>

</de.dlyt.yanndroid.samsung.layout.DrawerLayout>