<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="de.dlyt.yanndroid.movies.AppInfoActivity">

    <group
        android:id="@+id/play_group"
        android:visible="true">

        <item
            android:id="@+id/pause"
            android:icon="@drawable/ic_samsung_pause"
            android:title="@string/pause"
            app:showAsAction="always" />

        <item
            android:id="@+id/save"
            android:icon="@drawable/ic_samsung_save"
            android:title="@string/save"
            app:showAsAction="never" />

        <item
            android:id="@+id/solutions"
            android:icon="@drawable/ic_samsung_move"
            android:title="@string/solve"
            app:showAsAction="never" />

    </group>


    <group
        android:id="@+id/solve_group"
        android:visible="false">

        <item
            android:id="@+id/clear"
            android:icon="@drawable/ic_samsung_restore"
            android:title="@string/clear"
            app:showAsAction="always" />

        <item
            android:id="@+id/solve"
            android:icon="@drawable/ic_samsung_move"
            android:title="@string/solve"
            app:showAsAction="always" />

    </group>


</menu>